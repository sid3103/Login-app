<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <body class = "login-page">
    <div class="main">
      <p class="sign" align="center">Sign in</p>
      <form class="form1">        
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "un " %>        
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "pass" %>  
        <% if devise_mapping.rememberable? %>
          <div class="field" align="center" >
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %><br>      
        <%= f.submit "Sign In", class: "submit" %><br><br>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "submit" %><br />
        <% end %>
        <p class="forgot" align="center">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
          <% end %>
        </p>    
        </div>     
  </body>
<% end %>

